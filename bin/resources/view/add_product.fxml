<?import javafx.scene.layout.AnchorPane?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="controller.SceneController"
            stylesheets="styles.css">
    <Label layoutX="100" layoutY="30" text="Add New Product"/>
    <TextField fx:id="productNameField" layoutX="100" layoutY="70" promptText="Product Name"/>
    <TextField fx:id="productDescField" layoutX="100" layoutY="110" promptText="Description"/>
    <TextField fx:id="productPriceField" layoutX="100" layoutY="150" promptText="Price"/>
    <Button layoutX="100" layoutY="200" text="Add Product" onAction="#addProduct"/>
    <Button layoutX="250" layoutY="200" text="Back to Dashboard" onAction="#goToSellerDashboard"/>
</AnchorPane>
