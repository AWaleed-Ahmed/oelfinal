<?import javafx.scene.layout.AnchorPane?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="controller.SceneController" stylesheets="styles.css">
    <Label layoutX="100" layoutY="40" text="Login / Register"/>
    <TextField fx:id="usernameField" layoutX="100" layoutY="80" promptText="Username"/>
    <TextField fx:id="emailField" layoutX="100" layoutY="120" promptText="Email"/>
    <Button layoutX="100" layoutY="170" text="Register as Buyer" onAction="#registerBuyer"/>
    <Button layoutX="100" layoutY="220" text="Register as Seller" onAction="#registerSeller"/>
    <Button layoutX="250" layoutY="220" text="Back to Welcome" onAction="#goToWelcome"/>
</AnchorPane>
