<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.SceneController"
            stylesheets="styles.css"
            prefWidth="500" prefHeight="400">

    <Label layoutX="170" layoutY="40"
           text="Login / Register"
           style="-fx-font-size: 18px; -fx-font-weight: bold;" />

    <TextField fx:id="usernameField"
               layoutX="120" layoutY="100"
               prefWidth="260"
               promptText="Username" />

    <TextField fx:id="emailField"
               layoutX="120" layoutY="150"
               prefWidth="260"
               promptText="Email" />

    <Button layoutX="120" layoutY="210"
            prefWidth="260"
            text="Register as Buyer"
            onAction="#registerBuyer" />

    <Button layoutX="120" layoutY="260"
            prefWidth="260"
            text="Register as Seller"
            onAction="#registerSeller" />

    <Button layoutX="180" layoutY="320"
            prefWidth="140"
            text="Back to Welcome"
            onAction="#goToWelcome" />

</AnchorPane>
