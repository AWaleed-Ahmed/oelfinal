<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="controller.SceneController" stylesheets="styles.css"
            prefWidth="600" prefHeight="350">

    <Label layoutX="260" layoutY="20" text="Reviews" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

    <ListView fx:id="reviewList" layoutX="100" layoutY="60" prefHeight="220" prefWidth="400" />

    <Button layoutX="250" layoutY="300" prefWidth="120" text="Back to Product" onAction="#goToProductDetails" />

</AnchorPane>
