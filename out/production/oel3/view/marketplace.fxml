<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.SceneController"
            stylesheets="styles.css"
            prefWidth="600" prefHeight="400">

    <Label layoutX="220" layoutY="30"
           text="Available Products"
           style="-fx-font-size: 18px; -fx-font-weight: bold;" />

    <ListView fx:id="productListView"
              layoutX="100" layoutY="80"
              prefWidth="400" prefHeight="220" />

    <Button layoutX="150" layoutY="320"
            prefWidth="140"
            text="View Details"
            onAction="#viewDetails" />

    <Button layoutX="310" layoutY="320"
            prefWidth="140"
            text="Back to Welcome"
            onAction="#goToWelcome" />

</AnchorPane>
