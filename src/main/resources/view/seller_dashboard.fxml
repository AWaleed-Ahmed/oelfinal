<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="controller.SceneController" stylesheets="styles.css"
            prefWidth="600" prefHeight="400">

    <Label layoutX="250" layoutY="20" text="Your Products" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

    <ListView fx:id="sellerProductsList" layoutX="100" layoutY="60" prefHeight="210" prefWidth="400" />

    <Button layoutX="100" layoutY="290" prefWidth="120" text="View Bids" onAction="#viewBids" />
    <Button layoutX="240" layoutY="290" prefWidth="120" text="Accept Bid" onAction="#acceptBid" />
    <Button layoutX="380" layoutY="290" prefWidth="120" text="Add Product" onAction="#goToAddProduct" />

    <Button layoutX="100" layoutY="340" prefWidth="400" text="Back to Welcome" onAction="#goToWelcome" />

</AnchorPane>
